@model EllinMMCProject.Models.Graduate

@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create New Graduate</h1>
<hr />
<div class="row">
	<div class="col-md-8">
		<div class="card shadow-sm border-0 rounded-3">
			<div class="card-body p-4">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Position" class="control-label"></label>
						<input asp-for="Position" class="form-control" />
						<span asp-validation-for="Position" class="text-danger"></span>
					</div>
					 <div class="form-group">
						<label asp-for="formFile" class="form-label">Choose picture</label>
						<input asp-for="formFile" type="file" class="form-control" />
						<span asp-validation-for="formFile" class="text-danger"></span>
					</div> 
					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-primary" />
						<a class="btn btn-md btn-outline-secondary shadow" asp-action="Index">
							<i class="bi bi-arrow-left"></i> Back to List
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


