@model IEnumerable<EllinMMCProject.Models.Academy>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Academies List</h2>
    <a asp-action="Create" class="btn btn-lg text-white btn-success shadow">
        <i class="bi bi-plus-circle"></i> Create
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                <p class="mb-0">Actions</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                    <img src="@item.Image"
                         alt="Academy Image"
                         style="width:100%; height:120px; object-fit:cover;" />
            </td>
            <td>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-lg btn-warning text-white shadow-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-lg btn-info text-white shadow-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-lg btn-danger shadow-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
