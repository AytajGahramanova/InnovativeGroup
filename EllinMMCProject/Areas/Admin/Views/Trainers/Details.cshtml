@model EllinMMCProject.Models.Trainer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details Trainer</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image"
                 alt="Trainer Image"
                 style="width:500px; height:400px; object-fit:cover;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Positions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Positions)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sitat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sitat)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-md btn-warning text-white shadow" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-md btn-outline-secondary shadow" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
