
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<Appeal>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appeal Kart Grid - Kateqoriyalı Sistem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 30px 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            color: white;
        }

            .header h1 {
                font-size: 2.5rem;
                margin-bottom: 10px;
                text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
            }

            .header p {
                font-size: 1.1rem;
                opacity: 0.9;
            }

        /* Kategori Stilleri */
        .categories {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .category-btn {
            background: rgba(255, 255, 255, 0.9);
            border: none;
            padding: 12px 25px;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            color: #555;
        }

            .category-btn.active {
                background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
                color: white;
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(106, 17, 203, 0.3);
            }

            .category-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .category-count {
            background: rgba(255, 255, 255, 0.2);
            padding: 2px 8px;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .category-btn.active .category-count {
            background: rgba(255, 255, 255, 0.3);
        }

        /* Arama ve Filtreleme */
        .filters {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            gap: 15px;
            flex-wrap: wrap;
        }

        .search-box {
            position: relative;
            flex: 1;
            max-width: 400px;
        }

            .search-box input {
                width: 100%;
                padding: 12px 45px 12px 15px;
                border: none;
                border-radius: 25px;
                background: rgba(255, 255, 255, 0.9);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                font-size: 0.9rem;
                transition: all 0.3s ease;
            }

                .search-box input:focus {
                    outline: none;
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
                    transform: translateY(-2px);
                }

        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6a11cb;
            cursor: pointer;
        }

        .filter-select {
            padding: 12px 20px;
            border: none;
            border-radius: 25px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .filter-select:focus {
                outline: none;
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        /* Kart Grid Sistemi */
        .cards-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
        }

        .appeal-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            display: flex;
            flex-direction: column;
            height: 100%;
        }

            .appeal-card.approved {
                background: rgba(255, 240, 240, 0.95);
                border: 1px solid rgba(255, 100, 100, 0.3);
            }

                .appeal-card.approved .card-header {
                    background: linear-gradient(135deg, #ff6b6b 0%, #c0392b 100%);
                }

                .appeal-card.approved .field-icon {
                    background: linear-gradient(135deg, #ff6b6b 0%, #c0392b 100%);
                    box-shadow: 0 3px 10px rgba(255, 107, 107, 0.3);
                }

                .appeal-card.approved .field-label {
                    color: #c0392b;
                }

                .appeal-card.approved .id-badge {
                    background: linear-gradient(135deg, #ff6b6b 0%, #c0392b 100%);
                    box-shadow: 0 3px 10px rgba(255, 107, 107, 0.3);
                }

            .appeal-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
            }

        .card-header {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .card-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,96L48,112C96,128,192,160,288,186.7C384,213,480,235,576,213.3C672,192,768,128,864,128C960,128,1056,192,1152,192C1248,192,1344,128,1392,96L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
                background-size: cover;
                opacity: 0.2;
            }

            .card-header h3 {
                font-size: 1.3rem;
                margin-bottom: 5px;
                position: relative;
                text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            }

            .card-header p {
                opacity: 0.9;
                font-size: 0.9rem;
                position: relative;
            }

        .card-body {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .field-group {
            margin-bottom: 15px;
            position: relative;
            padding-left: 40px;
        }

        .field-icon {
            position: absolute;
            left: 0;
            top: 0;
            width: 30px;
            height: 30px;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            box-shadow: 0 3px 10px rgba(106, 17, 203, 0.3);
            font-size: 0.8rem;
            transition: all 0.3s ease;
        }

        .field-label {
            font-weight: 600;
            color: #6a11cb;
            font-size: 0.75rem;
            margin-bottom: 3px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .field-value {
            padding: 5px 0;
            color: #333;
            word-break: break-word;
            font-size: 0.9rem;
            border-bottom: 1px dashed #eee;
            transition: all 0.2s ease;
        }

        .message-field {
            min-height: 60px;
            line-height: 1.4;
            border-radius: 8px;
            background: #f9f9ff;
            padding: 10px;
            margin-top: 5px;
            border-left: 3px solid #6a11cb;
            font-size: 0.85rem;
            transition: all 0.3s ease;
            flex-grow: 1;
        }

        .appeal-card.approved .message-field {
            border-left: 3px solid #c0392b;
        }

        .card-footer {
            padding: 15px 20px;
            background: linear-gradient(to right, #f9f9ff, #f0f2ff);
            border-top: 1px solid rgba(106, 17, 203, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
        }

        .appeal-card.approved .card-footer {
            background: linear-gradient(to right, #fff0f0, #ffeaea);
            border-top: 1px solid rgba(255, 100, 100, 0.1);
        }

        .id-badge {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            box-shadow: 0 3px 10px rgba(106, 17, 203, 0.3);
            transition: all 0.3s ease;
        }

        .status {
            color: #28a745;
            font-weight: 600;
            font-size: 0.8rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .status.approved {
                color: #c0392b;
            }

            .status::before {
                content: '';
                width: 8px;
                height: 8px;
                background: #28a745;
                border-radius: 50%;
                display: inline-block;
            }

            .status.approved::before {
                background: #c0392b;
            }

        .action-buttons {
            display: flex;
            gap: 8px;
            margin-top: 15px;
        }

        .btn {
            padding: 8px 15px;
            border-radius: 20px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 0.8rem;
            flex: 1;
            justify-content: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            box-shadow: 0 3px 10px rgba(106, 17, 203, 0.3);
        }

        .btn-outline {
            background: transparent;
            color: #6a11cb;
            border: 1px solid #6a11cb;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .approved-message {
            text-align: center;
            padding: 10px;
            background: linear-gradient(135deg, #ff6b6b 0%, #c0392b 100%);
            color: white;
            border-radius: 8px;
            margin-top: 10px;
            font-size: 0.8rem;
            display: none;
        }

        .appeal-card.approved .approved-message {
            display: block;
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive Tasarım */
        @@media (max-width: 1200px) {
            .cards-grid

        {
            grid-template-columns: repeat(3, 1fr);
        }

        }

        @@media (max-width: 900px) {
            .cards-grid

        {
            grid-template-columns: repeat(2, 1fr);
        }

        .filters {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            max-width: 100%;
        }

        }

        @@media (max-width: 600px) {
            .cards-grid

        {
            grid-template-columns: 1fr;
        }

        .header h1 {
            font-size: 2rem;
        }

        .categories {
            gap: 10px;
        }

        .category-btn {
            padding: 10px 15px;
            font-size: 0.9rem;
        }

        }

        .stats {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.9);
            padding: 15px 25px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            min-width: 120px;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: #6a11cb;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Başvuru Yönetim Sistemi</h1>
            <p>Kategorilere göre başvuruları filtreleyin ve yönetin</p>
        </div>

        <div class="stats">
            <div class="stat-item">
                <div class="stat-number">24</div>
                <div class="stat-label">Toplam Başvuru</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">16</div>
                <div class="stat-label">Onay Bekleyen</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">8</div>
                <div class="stat-label">Onaylanan</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">4</div>
                <div class="stat-label">Bu Hafta</div>
            </div>
        </div>

        <!-- Kategoriler -->
        <div class="categories">
            <button class="category-btn active" data-category="all">
                <i class="fas fa-layer-group"></i>
                Tüm Başvurular
                <span class="category-count">24</span>
            </button>
            <button class="category-btn" data-category="pending">
                <i class="fas fa-clock"></i>
                Bekleyenler
                <span class="category-count">16</span>
            </button>
            <button class="category-btn" data-category="approved">
                <i class="fas fa-check-circle"></i>
                Onaylananlar
                <span class="category-count">8</span>
            </button>
            <button class="category-btn" data-category="web">
                <i class="fas fa-code"></i>
                Web Geliştirme
                <span class="category-count">6</span>
            </button>
            <button class="category-btn" data-category="mobile">
                <i class="fas fa-mobile-alt"></i>
                Mobile
                <span class="category-count">4</span>
            </button>
            <button class="category-btn" data-category="data">
                <i class="fas fa-chart-bar"></i>
                Veri Bilimi
                <span class="category-count">5</span>
            </button>
            <button class="category-btn" data-category="design">
                <i class="fas fa-palette"></i>
                Tasarım
                <span class="category-count">3</span>
            </button>
        </div>

        <!-- Arama ve Filtreleme -->
        <div class="filters">
            <div class="search-box">
                <input type="text" placeholder="İsim, e-posta veya kurs ara...">
                <div class="search-icon">
                    <i class="fas fa-search"></i>
                </div>
            </div>
            <select class="filter-select">
                <option value="newest">En Yeni</option>
                <option value="oldest">En Eski</option>
                <option value="name">İsime Göre (A-Z)</option>
                <option value="course">Kursa Göre</option>
            </select>
            <select class="filter-select">
                <option value="all">Tüm Durumlar</option>
                <option value="pending">Bekleyen</option>
                <option value="approved">Onaylanan</option>
            </select>
        </div>

        <!-- Kart Grid -->
        <div class="cards-grid">
           @foreach (Appeal item in Model)
            {
                <div class="appeal-card" data-category="web">
                <div class="card-header">
                    <h3>@item.FullName</h3>
                    <p>@item.Course</p>
                </div>

                <div class="card-body">
                    <div class="field-group">
                        <div class="field-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <span class="field-label">E-posta</span>
                        <div class="field-value">@item.Email</div>
                    </div>

                    <div class="field-group">
                        <div class="field-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <span class="field-label">Telefon</span>
                        <div class="field-value">@item.Phone</div>
                    </div>

                    <div class="field-group">
                        <div class="field-icon">
                            <i class="fas fa-comment-alt"></i>
                        </div>
                        <span class="field-label">Mesaj</span>
                        <div class="field-value message-field">
                            @item.Message
                        </div>
                    </div>

                    <div class="approved-message">
                        <i class="fas fa-check-circle"></i> Onaylandı
                    </div>

                    <div class="action-buttons">
                        <button class="btn btn-primary approve-btn">
                            <i class="fas fa-check"></i> Onayla
                        </button>
                        <button class="btn btn-outline">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-outline">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="id-badge">ID: 12345</div>
                    <div class="status">Yeni Başvuru</div>
                </div>
            </div> 
            }
           
        </div>
    </div>

    <script>
        // Kategori butonları için event listener
        document.querySelectorAll('.category-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Tüm butonlardan active classını kaldır
                document.querySelectorAll('.category-btn').forEach(btn => {
                    btn.classList.remove('active');
                });

                // Tıklanan butona active classını ekle
                this.classList.add('active');

                const category = this.getAttribute('data-category');
                filterCards(category);
            });
        });

        // Kart filtreleme fonksiyonu
        function filterCards(category) {
            const cards = document.querySelectorAll('.appeal-card');

            cards.forEach(card => {
                if (category === 'all') {
                    card.style.display = 'flex';
                } else if (category === 'pending') {
                    if (card.classList.contains('approved')) {
                        card.style.display = 'none';
                    } else {
                        card.style.display = 'flex';
                    }
                } else if (category === 'approved') {
                    if (card.classList.contains('approved')) {
                        card.style.display = 'flex';
                    } else {
                        card.style.display = 'none';
                    }
                } else {
                    if (card.getAttribute('data-category') === category) {
                        card.style.display = 'flex';
                    } else {
                        card.style.display = 'none';
                    }
                }
            });
        }

        // Onayla butonları için event listener
        document.querySelectorAll('.approve-btn').forEach(button => {
            button.addEventListener('click', function() {
                const card = this.closest('.appeal-card');
                const status = card.querySelector('.status');

                // Kartı onaylanmış olarak işaretle
                card.classList.add('approved');

                // Durumu güncelle
                status.textContent = 'Onaylandı';
                status.classList.add('approved');

                // Onayla butonunu kaldır
                this.style.display = 'none';

                // Onay mesajını göster
                card.querySelector('.approved-message').style.display = 'block';
            });
        });

        // Arama fonksiyonu
        document.querySelector('.search-box input').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.appeal-card');

            cards.forEach(card => {
                const name = card.querySelector('h3').textContent.toLowerCase();
                const email = card.querySelector('.field-value').textContent.toLowerCase();
                const course = card.querySelector('.card-header p').textContent.toLowerCase();

                if (name.includes(searchTerm) || email.includes(searchTerm) || course.includes(searchTerm)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>