@model IEnumerable<EllinMMCProject.Models.Slider>

@{
    ViewData["Title"] = "Sliders";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Css {
    <link href="css/app-light.css" rel="stylesheet" />
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Slider List</h2>
    <a asp-action="Create" class="btn btn-lg text-white btn-success shadow">
        <i class="bi bi-plus-circle"></i> Add New Slider
    </a>
</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-4">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width:220px;">Image</th>
                    <th class="text-center" style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Image" alt="Slider Image"
                                 class="img-thumbnail rounded"
                                 style="max-width:200px;" />
                        </td>
                        <td class="text-center">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-lg btn-warning text-white shadow-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-lg btn-info text-white shadow-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-lg btn-danger shadow-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
