@model EllinMMCProject.Models.Slider

@{
    ViewData["Title"] = "Edit Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Edit Slider</h2>
    <a asp-action="Index" class="btn btn-lg btn-secondary shadow">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Image" class="form-label fw-bold"></label>
                        <input asp-for="Image" class="form-control form-control-lg shadow-sm" placeholder="Enter image URL..." />
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-lg btn-success text-white shadow">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-lg btn-outline-secondary shadow">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
