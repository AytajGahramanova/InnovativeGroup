@model EllinMMCProject.Models.Slider

@{
    ViewData["Title"] = "Slider Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Slider Details</h2>
    <a asp-action="Index" class="btn btn-lg btn-secondary shadow">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-4 text-center">

                <h4 class="fw-bold mb-3">Slider Info</h4>
                <hr />

                <div class="mb-4">
                    <label class="fw-bold d-block mb-2">Image</label>
                    <img src="@Model.Image" alt="Slider Image" class="img-fluid rounded shadow-sm" style="max-width: 400px;" />
                    </div>

                <div class="d-flex justify-content-center mt-4" style="gap: 16px;">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-lg btn-warning text-white shadow">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-lg btn-outline-secondary shadow">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
