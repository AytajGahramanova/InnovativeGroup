@model EllinMMCProject.Models.Slider

@{
    ViewData["Title"] = "Create Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Create New Slider</h2>
    <a asp-action="Index" class="btn btn-lg btn-secondary shadow">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-4">

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="formFile" class="form-label">Choose picture</label>
                        <input asp-for="formFile" type="file" class="form-control" />
                        <span asp-validation-for="formFile" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>
