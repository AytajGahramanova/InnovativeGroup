<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #6a11cb;
            --secondary: #2575fc;
            --accent: #ff512f;
            --pink: #dd2476;
            --success: #00b894;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(270deg, var(--primary), var(--secondary), var(--accent), var(--pink));
            background-size: 800% 800%;
            animation: gradientShift 12s ease infinite;
            color: #fff;
            position: relative;
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Floating background elements */
        .floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .floating-element {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: floatAround 20s infinite linear;
        }

        @@keyframes floatAround {
            0% {
                transform: translate(0, 0) rotate(0deg);
            }

            33% {
                transform: translate(30px, -50px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }

            100% {
                transform: translate(0, 0) rotate(360deg);
            }
        }

        .card {
           
            border-radius: 25px;
            padding: 50px 60px;
            text-align: center;   
            backdrop-filter: blur(20px);
            z-index: 2;
            position: relative;
            overflow: hidden;
            width: 100%;
            animation: cardEntrance 0.8s ease-out;
        }

        @@keyframes cardEntrance {
            0% {
                transform: scale(0.8) translateY(50px);
                opacity: 0;
            }

            100% {
                transform: scale(1) translateY(0);
                opacity: 1;
            }
        }

        .card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
            transform: rotate(45deg);
            animation: shine 6s infinite;
            z-index: -1;
        }

        @@keyframes shine {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }

            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }

        .gif-container {
            position: relative;
            width: 240px;
            height: 240px;
            margin: 0 auto 30px;
            border-radius: 50%;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4), 0 0 0 4px rgba(255, 255, 255, 0.2);
            animation: gifFloat 4s ease-in-out infinite;
            border: 3px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }

            .gif-container:hover {
                transform: scale(1.05);
                box-shadow: 0 20px 45px rgba(0, 0, 0, 0.5), 0 0 0 4px rgba(255, 255, 255, 0.3);
            }

        @@keyframes gifFloat {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            33% {
                transform: translateY(-15px) rotate(1deg);
            }

            66% {
                transform: translateY(8px) rotate(-1deg);
            }
        }

        .gif-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .gif-container:hover img {
            transform: scale(1.1);
        }

        h1 {
            font-size: 2.8rem;
            font-weight: 800;
            margin: 25px 0 15px;
            animation: textGlow 3s ease-in-out infinite alternate;
            background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        @@keyframes textGlow {
            0% {
                filter: drop-shadow(0 0 10px rgba(255,255,255,0.5));
            }

            100% {
                filter: drop-shadow(0 0 25px rgba(255,255,255,0.8));
            }
        }

        .course-highlight {
            font-size: 1.4rem;
            font-weight: 700;
            margin: 20px 0;
            padding: 12px 25px;
            background: linear-gradient(135deg, rgba(255,255,255,0.2), rgba(255,255,255,0.1));
            border-radius: 50px;
            display: inline-block;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 25px;
            opacity: 0.95;
            line-height: 1.6;
        }

        .btn-container {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin: 30px 0;
            flex-wrap: wrap;
        }

        .btn {
            background: rgba(255, 255, 255, 0.9);
            color: var(--primary);
            border: none;
            padding: 15px 35px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            position: relative;
            overflow: hidden;
        }

            .btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
                transition: left 0.5s;
            }

            .btn:hover {
                transform: translateY(-5px) scale(1.05);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
                background: white;
            }

                .btn:hover::before {
                    left: 100%;
                }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
        }

        .footer-note {
            margin-top: 25px;
            padding: 15px 25px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            font-size: 1rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
        }

        #countdown {
            font-weight: 700;
            color: var(--success);
            font-size: 1.2rem;
            animation: countdownPulse 1s infinite;
        }

        @@keyframes countdownPulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        /* Confetti animation */
        .confetti {
            position: absolute;
            width: 12px;
            height: 12px;
            top: -10px;
            animation: fall 4s infinite ease-in;
            opacity: 0.8;
            z-index: 3;
        }

        @@keyframes fall {
            0% {
                transform: translateY(0) rotate(0deg) scale(1);
                opacity: 1;
            }

            100% {
                transform: translateY(100vh) rotate(720deg) scale(0.5);
                opacity: 0;
            }
        }

        @@media (max-width: 768px) {
            .card {
                padding: 30px 25px;
            }

            h1 {
                font-size: 2.2rem;
            }

            .gif-container {
                width: 200px;
                height: 200px;
            }

            .btn-container {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                max-width: 250px;
                justify-content: center;
            }
        }

        @@media (max-width: 480px) {
            .card {
                padding: 25px 20px;
            }

            h1 {
                font-size: 1.8rem;
            }

            p {
                font-size: 1rem;
            }

            .course-highlight {
                font-size: 1.2rem;
                padding: 10px 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Floating background elements -->
    <div class="floating-elements">
        <div class="floating-element" style="width: 80px; height: 80px; top: 10%; left: 10%; animation-delay: 0s;"></div>
        <div class="floating-element" style="width: 120px; height: 120px; top: 60%; left: 80%; animation-delay: 2s;"></div>
        <div class="floating-element" style="width: 60px; height: 60px; top: 80%; left: 20%; animation-delay: 4s;"></div>
        <div class="floating-element" style="width: 100px; height: 100px; top: 30%; left: 70%; animation-delay: 6s;"></div>
    </div>

    <div class="card">
        <div class="gif-container">
            <img src="@gifUrl" alt="success animation">
        </div>

        <h1>Təbriklər! @specialEmoji</h1>

       
        <p>@courseMessage</p>
        <p>Tezliklə sizinlə əlaqə saxlanılacaq. Gözlədiyiniz üçün təşəkkürlər! 💫</p>

        <div class="btn-container">
            <a href="/" class="btn">
                <span>🏠</span> Ana səhifə
            </a>
            <a href="/Course" class="btn btn-primary">
                <span>📚</span> Digər Kurslar
            </a>
        </div>

        <div class="footer-note">
            <p><span id="countdown">5</span> saniyədən sonra avtomatik olaraq ana səhifəyə yönləndiriləcəksiniz...</p>
        </div>
    </div>

    <script>
      
        (function(){
            let seconds = 5;
            const el = document.getElementById('countdown');
            const timer = setInterval(() => {
                seconds--;
                if (el) el.textContent = seconds;
                if (seconds <= 0) {
                    clearInterval(timer);
                    window.location.href = '/';
                }
            }, 1000);
        })();

        // Confetti yağışı 🎊
        const colors = ['#ff6b6b', '#feca57', '#48dbfb', '#1dd1a1', '#f368e0', '#f9ca24', '#6a11cb', '#2575fc', '#ff9ff3'];
        for (let i = 0; i < 100; i++) {
            const confetti = document.createElement('div');
            confetti.className = 'confetti';
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            confetti.style.animationDuration = (2 + Math.random() * 4) + 's';
            confetti.style.width = confetti.style.height = (8 + Math.random() * 10) + 'px';
            confetti.style.animationDelay = (Math.random() * 5) + 's';
            confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
            document.body.appendChild(confetti);
        }

        // Əlavə interaktivlik
        document.querySelector('.gif-container').addEventListener('click', function() {
            this.style.animation = 'gifFloat 1s ease-in-out';
            setTimeout(() => {
                this.style.animation = 'gifFloat 4s ease-in-out infinite';
            }, 1000);
        });
    </script>
</body>
</html>