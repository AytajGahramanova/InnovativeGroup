@model EllinMMCProject.Models.Course

<div class="container my-5">

    <!-- Başlıq və əsas şəkil -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-3 display-4">@Model.Title</h1>
        <img src="@Model.Image" alt="@Model.Title" class="img-fluid rounded shadow-lg main-img"
             onmouseover="this.style.transform='scale(1.05)'"
             onmouseout="this.style.transform='scale(1)'" />
    </div>

    <!-- Təsvir -->
    <div class="mb-5 text-center">
        <p class="fs-5 text-secondary mx-auto" style="max-width: 850px; line-height: 1.7;">@Model.Description</p>
    </div>

    <!-- Mövzular -->
    <div class="mb-5">
        <h2 class="mb-4 section-title text-primary">Mövzular</h2>
        <div class="topics-flex">
            @foreach (var topic in Model.Topics)
            {
                <div class="topic-card shadow-sm">
                    <h5 class="fw-semibold mb-2">@topic.Title</h5>
                    <p class="text-muted mb-0">@topic.Description</p>
                </div>
            }
        </div>
    </div>

    <!-- Şəkillər -->
    <div class="mb-5">
        <h2 class="mb-4 section-title text-success">Şəkillər</h2>
        <div class="images-flex">
            @foreach (var img in Model.Images)
            {
                <div class="image-item">
                    <img src="@img.ImageUrl" alt="@Model.Title" />
                </div>
            }
        </div>
    </div>

    <!-- Videolar -->
    <div class="mb-5">
        <h2 class="mb-4 section-title text-danger">Videolar</h2>
        <div class="videos-flex">
            @foreach (var vid in Model.Videos)
            {
                <div class="video-card shadow-lg">
                    <h6 class="mb-2 fw-medium">@vid.Title</h6>
                    <div class="video-frame">
                        <video controls="controls">
                            <source src="@vid.VideoUrl" type="@vid.Title" />                        
                        </video>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f9f9f9;
        margin-top: 80px;
    }

    .main-img {
        max-height: 450px;
        object-fit: cover;
        border-radius: 12px;
        transition: transform 0.3s ease-in-out!important;
        transition: all 0.5s;
    }

    .section-title {
        font-weight: 600;
        border-bottom: 2px solid rgba(0,0,0,0.1);
        padding-bottom: 5px;
        margin-bottom: 20px;
    }

    /* Mövzular üçün flex dizayn */
    .topics-flex {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .topic-card {
        flex: 1 1 300px;
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        transition: all 0.3s ease-in-out;
    }

        .topic-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    /* Şəkillər üçün flex dizayn */
    .images-flex {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
    }

    .image-item img {
        width: 250px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s!important;
        cursor: pointer;
    }

        .image-item img:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0,0,0,0.25);
        }

    /* Videolar üçün flex dizayn */
    .videos-flex {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .video-card {
        flex: 1 1 400px;
        background: #fff;
        border-radius: 12px;
        padding: 15px;
        transition: all 0.3s ease-in-out;
    }

        .video-card:hover {
            transform: translateY(-5px) scale(1.01);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .video-frame {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 nisbəti */
        height: 0;
        overflow: hidden;
        border-radius: 10px;
    }

        .video-frame iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 10px;
        }

    /* Responsive */
    media (max-width: 768px) {
        .main-img

    {
        max-height: 300px;
    }

    }
</style>
